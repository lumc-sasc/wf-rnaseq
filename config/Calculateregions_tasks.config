    withName: BEDTOOLS_INTERSECT {
        queue = { intervals1.toList().size() > 1 ?
                    (5*((intervals1.target.stream().reduce(0, (x, y) -> x + y.size()) + intervals2.target.size()) * task.attempt / 1000 + 125000) < 3600000 ? 'short' : 'all') :
